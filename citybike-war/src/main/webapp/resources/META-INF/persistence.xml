<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <persistence-unit name="transactions-optional">
        <provider>org.datanucleus.api.jpa.PersistenceProviderImpl</provider>
        <class>edu.citybike.model.Address</class>
        <class>edu.citybike.model.BankAccount</class>
        <class>edu.citybike.model.Bike</class>
        <class>edu.citybike.model.Credentials</class>
        <class>edu.citybike.model.Fee</class>
        <class>edu.citybike.model.Rent</class>
        <class>edu.citybike.model.RentalOffice</class>
        <class>edu.citybike.model.TechnicalDetails</class>
        <class>edu.citybike.model.User</class>
        <class>edu.citybike.model.Rent</class>
        <exclude-unlisted-classes/>
        <properties>
            <property name="datanucleus.NontransactionalRead" value="true"/>
            <property name="datanucleus.NontransactionalWrite" value="true"/>
            <property name="datanucleus.ConnectionURL" value="appengine"/>
            <property name="datanucleus.singletonEMFForName" value="true"/>
            <property name="datanucleus.appengine.datastoreEnableXGTransactions" value="true" />
        </properties>

    </persistence-unit>

</persistence>